<%= form_with model: @recipe, local: true do |f| %>
<%= render "shared/error_message", model: f.object %>

  <table class="cook-form">
    <tbody>
      <tr>
        <th>料理名</th>
        <td><%= f.text_field :cooking_name, style: "border:none" %></td>
      </tr>
      <tr>
        <th>写真</th>
        <td><%= f.file_field :image %></td>
      </tr>
      <tr>
        <th>必要な材料・調味料</th>
        <td><%= f.text_area :ingredient, style: "border:none" %></td>
      </tr>
      <tr>
        <th>作り方</th>
        <td><%= f.text_area :process, style: "border:none" %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, {} ) %></td>
      </tr>
      <tr>
        <th>調理時間</th>
        <td><%= f.collection_select(:cook_time_id, CookTime.all, :id, :name, {} )%></td>
      </tr>
      <tr>
        <th>おかずの種類</th>
        <td><%= f.collection_select(:side_dishes_id, SideDishes.all, :id, :name, {} )%></td>
      </tr>
    </tbody>
  </table>
  <div class="form-btn">
  <%= f.submit "レシピを投稿する" %>
  </div>
<% end %>

